<h1>Races</h1>

<table class="table table-bordered table-condensed table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @races.each do |race| %>
  <tr>
    <td><%= link_to race.name, race %></td>
    <td><%= link_to 'Edit', edit_race_path(race) %> <%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Race', new_race_path %>
