<h1>Sectors</h1>

<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Race</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= link_to sector.name, sector %></td>
        <td><%= link_to sector.race.name, sector.race %></td>
        <td><%= link_to 'Edit', edit_sector_path(sector) %> <%= link_to 'Destroy', sector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Sector', new_sector_path %>
